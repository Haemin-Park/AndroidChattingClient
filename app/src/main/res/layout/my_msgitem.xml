<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sm_space">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xxlg_space"
        android:layout_marginRight="@dimen/sm_space"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@dimen/default_fontsize"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mymsg"
            android:padding="@dimen/sm_space"
            android:textSize="@dimen/lg_fontsize"
            android:textStyle="bold"
            tools:text="본인의 메시지"
            />

    </LinearLayout>

</RelativeLayout>